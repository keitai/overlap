
<h5 class="float-left">Therapists</h5>
<%= link_to 'Add a Therapist', new_therapist_path, :class => "button small float-right" %>



<table class="responsive-card-table">
  <thead>
    <tr>
      <th>Name</th>
	  <th>Email</th>
	  <th>Progress</th>
	  <th>Time Zone</th>
	  <th>Phone Number</th>
	  <th>Admin</th>
    </tr>
  </thead>

  <tbody>
    <% @therapists.each do |therapist| %>
      <tr>
        <td data-label="Full Name"><%= link_to therapist.fullname, therapist %></td>
		<td data-label="Email"><%= therapist.email %></td>
		<% if therapist.appointments.empty? %>
		<td data-label="Progress">No Overlaps Recorded</strong></td>
		<% else %>
		<td data-label="Progress"><%= pluralize(therapist.appointments.count, 'overlap')%></td>	
		<% end %>
		<td data-label="Location"><%= therapist.location %></td>
		<td data-label="Phone Number"><%= therapist.phone_number %></td>
		<td data-label="Edit Links"><%= link_to 'Edit Therapist Info', edit_therapist_path(therapist) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


