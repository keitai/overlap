<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
<%= devise_error_messages! %>
  <div class="row collapse expanded">
	      <div class="small-3 medium-3 column">
		  </div>
    <div class="small-6 medium-6 column">

<div class="login-box">
  <div class="row collapse expanded">
    <div class="small-12 medium-12 column">
      <div class="login-box-form-section">
        <h1 class="login-box-title">Sign In</h1>
         <%= f.email_field :email, class: 'login-box-input', placeholder: "CARD Email" %>
		 <%= f.password_field :password, class: 'login-box-input', placeholder: "Password" %>		 
        <%= f.submit 'Sign In', :class => 'login-box-submit-button' %>
        <% if devise_mapping.rememberable? -%>
          <div class="checkbox float-left" style="width:150px">
            <label>
              <%= f.check_box :remember_me %> Remember me
            </label>
          </div>
        <% end -%>
	      <div class="linkage float-right">
	   	  <%- if devise_mapping.registerable? %>
	   	    <%= link_to 'Sign up', new_registration_path(resource_name)  %> |
	   	  <% end -%>
	   	  <%- if devise_mapping.recoverable? %>
	   	    <%= link_to "Forgot password?", new_password_path(resource_name) %> |
	   	  <% end -%>
			<%= mail_to "c.miyake@centerforautism.com", "Contact Support" %>
		  
	   	</div>
      </div>    
    </div>

  </div>
</div>
	      <div class="small-3 medium-3 column">
		  </div>
</div>
</div>
  <% end %>

